#include "fsl-lx2160a.dtsi"

/ {
	compatible = "tq,tqmlx2160a", "fsl,lx2160a";
};

&emdio1 {
	status = "okay";
};

&emdio2 {
	status = "okay";
};

&esdhc1 {
	status = "okay";
	bus-width = <8>;
	no-sd;
	no-sdio;
	non-removable;
	mmc-hs200-1_8v;
};

&fspi {
	bus-num = <0>;
	status = "okay";

	flash0: flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		spi-max-frequency = <10000000>;
		spi-rx-bus-width = <1>;
		spi-tx-bus-width = <1>;
		reg = <0>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			rcw-pbl@0 {
				label = "RCW-PBL";
				reg = <0x0 0x100000>;
			};

			u-boot@100000 {
				label = "U-Boot";
				reg = <0x100000 0x100000>;
			};

			u-boot-env {
				label = "U-Boot-Env";
				reg = <0x300000 0x100000>;
			};

			ddr-phy {
				label = "DDR-PHY";
				reg = <0x800000 0x100000>;
			};

			dpaa2-mc {
				label = "DPAA2-MC";
				reg = <0xa00000 0x300000>;
			};

			dpaa2-dpl {
				label = "DPAA2-DPL";
				reg = <0xd00000 0x100000>;
			};

			dpaa2-dpc {
				label = "DPAA2-DPC";
				reg = <0xe00000 0x100000>;
			};

			dtb {
				label = "DTB";
				reg = <0xf00000 0x100000>;
			};

			linux@10000000 {
				label = "Linux";
				reg = <0x1000000 0x1000000>;
			};

			rootfs {
				label = "RootFS";
				reg = <0x3000000 0x5000000>;
			};
		};
	};

	flash1: flash@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		spi-max-frequency = <10000000>;
		spi-rx-bus-width = <1>;
		spi-tx-bus-width = <1>;
		reg = <1>;
	};
};

&i2c0 {
	status = "okay";

	scl-gpios = <&gpio2 11 GPIO_ACTIVE_HIGH>;

	sensor0: temp-sensor@1f {
		compatible = "nxp,se97", "jedec,jc-42.4-temp";
		reg = <0x1F>;
		status = "okay";
	};

	gpioex4: gpio@20 {
		compatible = "nxp,pca9555";
		reg = <0x20>;
		#gpio-cells = <2>;
		gpio-controller;
	};

	eeprom1: eeprom@57 {
		compatible = "atmel,24c02";
		reg = <0x57>;
		pagesize = <16>;
		status = "okay";
	};

	rtc: rtc@51 {
		compatible = "nxp,pcf85063";
		quartz-load-femtofarads = <12500>;
		reg = <0x51>;
		status = "okay";
	};

	/* regular EEPROM */
	eeprom2: eeprom@50 {
		compatible = "atmel,24c64";
		reg = <0x50>;
		status = "okay";
	};
};
