#include "imx8mn-tqma8mqnl-mba8mx-lcdif-lvds-tm070jvhg33.dts"

/ {
	/* This voltage converter is located on the adapter board MBaxCA */
	reg_mipi_csi_v3v3: regulator-mipi-csi-v3v3 {
		compatible = "regulator-fixed";
		regulator-name = "MIPI_CSI_V_3V3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&reg_vcc_5v0>;
	};
};

&cameradev {
	status = "okay";
};

&mipi_csi_1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	port@0 {
		reg = <0>;
		mipi1_sensor_ep: endpoint {
			remote-endpoint = <&sony_imx327_ep0>;
			data-lanes = <2>;
			csis-hs-settle = <13>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};

&isi_0 {
	status = "okay";

	cap_device {
		status = "okay";
	};
};

&i2c3 {
	vc_ctrl: controller@10 {
		compatible = "vision-components,mipi-module";
		reg = <0x10>;
		#clock-cells = <0>;
		vcc-supply = <&reg_mipi_csi_v3v3>;
		clock-frequency = <37125000>;
	};

	camera@1a {
		compatible = "sony,imx327", "sony,imx290";
		reg = <0x1a>;
		clocks = <&vc_ctrl>;
		clock-names = "xclk";
		clock-frequency = <37125000>;
		vdda-supply = <&vc_ctrl>;
		vddd-supply = <&vc_ctrl>;
		vdddo-supply = <&vc_ctrl>;
		orientation = <2>;

		port {
			sony_imx327_ep0: endpoint {
				remote-endpoint = <&mipi1_sensor_ep>;
				data-lanes = <1 2>;
				clock-lanes = <0>;
				clock-noncontinuous = <1>;
				link-frequencies = /bits/ 64 <445500000 297000000>;
			};
		};
	};
};
