#include "fsl-ls1028a-mbls1028a.dts"

/ {
	model = "MBLS1028A-IND starterkit";
	compatible = "tq,mbls1028a-ind", "tq,tqmls1028a", "fsl,ls1028a";
};

&i2c5 {
	pca9538@72 {
		compatible = "nxp,pca9538";
		reg = <0x72>;
		status = "okay";
		gpio-controller;
		#gpio-cells = <2>;

		pin_01 {
			gpio-hog;
			gpios = <1 0>;
			output-high;
			line-name = "usb_rstn";
		};

		pin_07 {
			gpio-hog;
			gpios = <7 0>;
			output-low;
			line-name = "dcdc_rstn";
		};
	};

};

&pca9555_25 {
	status = "disabled";
};
