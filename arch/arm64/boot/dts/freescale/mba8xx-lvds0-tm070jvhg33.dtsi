/ {
	panel-lvds0 {
		compatible = "tianma,tm070jvhg33";
		backlight = <&backlight_lvds>;
		status = "okay";

		port {
			panel_in_lvds0: endpoint {
				remote-endpoint = <&lvds0_out>;
			};
		};
	};
};

&adma_pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_admapwm>;
	status = "okay";
};

&adma_pwm_lpcg {
	status = "okay";
};

&backlight_lvds {
	status = "okay";
};

&ldb1_phy {
	status = "okay";
};

&ldb1 {
	status = "okay";

	lvds-channel@0 {
		status = "okay";

		port@1 {
			reg = <1>;

			lvds0_out: endpoint {
				remote-endpoint = <&panel_in_lvds0>;
			};
		};
	};
};

&iomuxc {
	pinctrl_admapwm: admapwmgrp {
		fsl,pins = <
			IMX8QXP_SPI0_CS1_ADMA_LCD_PWM0_OUT		0x00000021
		>;
	};
};
