#include "imx8mp-tqma8mpql-mba8mpxl.dts"

/ {
	sound-hdmi {
		compatible = "fsl,imx-audio-cdnhdmi";
		model = "audio-hdmi";
		audio-cpu = <&aud2htx>;
		hdmi-out;
		constraint-rate = <44100>,
				  <88200>,
				  <176400>,
				  <32000>,
				  <48000>,
				  <96000>,
				  <192000>;
		status = "okay";
	};
};

&aud2htx {
	status = "okay";
};

&display_subsystem {
	status = "okay";
};

&hdmi_blk_ctrl {
	status = "okay";
};

&hdmi_pavi {
	status = "okay";
};

&hdmi {
	status = "okay";
};

&hdmiphy {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hdmi>;

	status = "okay";
};

&irqsteer_hdmi {
	status = "okay";
};

&lcdif3 {
	status = "okay";

	thres-low  = <1 2>;             /* (FIFO * 1 / 2) */
	thres-high = <3 4>;             /* (FIFO * 3 / 4) */
};
