/ {
	panel-lvds0 {
		compatible = "tianma,tm070jvhg33";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_lbdpanel0>;
		backlight = <&backlight_lvds0>;
		enable-gpios = <&lsio_gpio1 3 GPIO_ACTIVE_HIGH>;
		status = "okay";

		port {
			panel_in_lvds0: endpoint {
				remote-endpoint = <&lvds0_out>;
			};
		};
	};
};

&backlight_lvds0 {
	status = "okay";
};

&ldb1_phy {
	status = "okay";
};

&ldb1 {
	status = "okay";

	lvds-channel@0 {
		status = "okay";

		port@1 {
			reg = <1>;

			lvds0_out: endpoint {
				remote-endpoint = <&panel_in_lvds0>;
			};
		};
	};
};

&pwm_mipi_lvds0 {
	status = "okay";
};
