/ {
	backlight_lvds: backlight-lvds {
		compatible = "pwm-backlight";
		pinctrl-names = "default";
		pwms = <&pwm_mipi_lvds0 0 100000 0>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		power-supply = <&reg_12v0>;
		enable-gpios = <&lsio_gpio1 2 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	panel-lvds0 {
		compatible = "tianma,tm070jvhg33";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_lbdpanel>;
		backlight = <&backlight_lvds>;
		power-supply = <&reg_12v0>;
		enable-gpios = <&lsio_gpio1 3 0>;
		status = "okay";

		port {
			panel_in_lvds0: endpoint {
				remote-endpoint = <&lvds0_out>;
			};
		};
	};
};

&pwm_mipi_lvds0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm_mipi_lvds0>;
	status = "okay";
};

&iomuxc {

	pinctrl_pwm_mipi_lvds0: mipi_lvds0_pwm_grp {
		fsl,pins = <
			IMX8QXP_MIPI_DSI0_GPIO0_00_MIPI_DSI0_PWM0_OUT		0x00000020
			IMX8QXP_SPI2_SDI_LSIO_GPIO1_IO02			0x00000020
		>;
	};


	pinctrl_lbdpanel: lbdpanelgrp {
		fsl,pins = <
			/* LCD PWR */
			IMX8QXP_SPI2_SCK_LSIO_GPIO1_IO03			0x00000020
		>;
	};
};

&ldb1_phy {
	status = "okay";
};

&ldb1 {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";

		port@1 {
			reg = <1>;

			lvds0_out: endpoint {
				remote-endpoint = <&panel_in_lvds0>;
			};
		};
	};
};
