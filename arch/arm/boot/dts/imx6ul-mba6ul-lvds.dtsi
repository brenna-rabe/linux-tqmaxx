&lcdif {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_lcdif>;
	display = <&display_lvds>;
	lcd-supply = <&reg_lcd_pwr>;
	status = "okay";
};

&pwm4 {
	status = "okay";
};

&pxp {
	status = "okay";
};

&reg_lcd_pwr {
	status = "okay";
};

&reg_lvds_transmitter {
	status = "okay";
};
