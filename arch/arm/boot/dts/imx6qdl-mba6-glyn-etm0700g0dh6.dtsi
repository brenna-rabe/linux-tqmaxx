&backlight {
	pwms = <&pwm1 0 5000000>;
	brightness-levels = <255 228 196 160 128 96 64 32 16>;
	default-brightness-level = <5>;
	status = "okay";
};

&lcd {
	status = "okay";
};

&mxcfb3 {
	interface_pix_fmt = "RGB666";
	mode_str = "ETM0700G0DH6";
	default_bpp = <32>;
	status = "okay";
};

&polytouch {
	gain = <20>;
	status = "okay";
};
