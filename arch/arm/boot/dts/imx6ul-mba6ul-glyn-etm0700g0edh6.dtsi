/ {
	/* ETM0700G0EDH6 */
	display_etm0700: display {
		bits-per-pixel = <32>; /* 32: RGB8880 */
		bus-width = <24>; 

		display-timings {
			native-mode = <&timing1>;
			timing1: 800x480p62 {
				clock-frequency = <33260000>;
				hactive = <800>;
				vactive = <480>;
				hback-porch = <216>;
				hfront-porch = <40>;
				vback-porch = <35>;
				vfront-porch = <10>;
				hsync-len = <128>;
				vsync-len = <2>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <1>;
				pixelclk-active = <0>;
			};
		};
	};
};

&analog_touch {
	status = "disabled";
};

&backlight {
	pwms = <&pwm2 0 5000000>;
	brightness-levels = <255 228 196 160 128 96 64 32 16>;
	default-brightness-level = <5>;
	status = "okay";
};

&lcdif {
	display = <&display_etm0700>;
	status = "okay";
};

&polytouch {
	/*
	 * HACHHACK:
	 * do not use size settings, display touch reads out 1792 x 1024
	 * (tested with ETM0700G0BDH6)
	 */
/*
	touchscreen-size-x = <800>;
	touchscreen-size-y = <480>;
*/
	status = "okay";
};
