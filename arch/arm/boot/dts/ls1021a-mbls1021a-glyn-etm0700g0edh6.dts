/dts-v1/;
#include "ls1021a-mbls1021a.dtsi"

&backlight_dcu {
	gpios = <&pca9530 0 GPIO_ACTIVE_LOW>; /* Backlight Enable inverted */
	status = "okay";
};

&display {
	compatible = "edt,etm0700g0dh6";
	enable-gpios = <&pca9554_1 3 GPIO_ACTIVE_LOW>; /* LCD_BLT_EN */
};

&dcu_out {
	remote-endpoint = <&panel_in>;
};

&polytouch {
	status = "okay";
};
