&backlight {
	pwms = <&pwm1 0 20000 0>; /* 50 kHz */
	brightness-levels = <0 2 4 8 16 32 64 128 255>;
	default-brightness-level = <8>;
	status = "okay";
};

&ecspi1 {
	pinctrl-names = "default";
	/* SS0 is shared with touch IRQ, remove it here */
	pinctrl-0 = <&pinctrl_ecspi1>;
	cs-gpios = <&gpio4 0 GPIO_ACTIVE_LOW>, <&gpio4 1 GPIO_ACTIVE_LOW>,
		   <&gpio4 2 GPIO_ACTIVE_LOW>;
};

&lcdif {
	status = "okay";
};

&display {
	compatible = "cdtech,s070pws19hp-fc21";
	power-supply = <&reg_diplay_3v3>;
};

&polytouch {
	gain = <20>;

	touchscreen-size-x = <1024>;
	touchscreen-size-y = <600>;

	status = "okay";
};

&spidev0_3 {
	status = "disabled";
};
