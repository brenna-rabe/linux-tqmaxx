&i2c2 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";
};

&hdmi {
	pinctrl-names = "default";
	ddc-i2c-bus = <&i2c2>;
	status = "okay";
};

&iomuxc {
	imx6qdl-mba6 {
		pinctrl_i2c2: i2c2grp {
			fsl,pins = <
				MX6QDL_PAD_KEY_COL3__I2C2_SCL 0x4001b899
				MX6QDL_PAD_KEY_ROW3__I2C2_SDA 0x4001b899
			>;
		};
	};
};

